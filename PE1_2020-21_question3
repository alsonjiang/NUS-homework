def calculate_areas(w_list, h_list):
    # Initialize the areas for white, yellow, and red colors.
    white_area, yellow_area, red_area = 0, 0, 0

    # Loop through the vertical and horizontal stripes.
    for i, w in enumerate(w_list):
        for j, h in enumerate(h_list):
            # Calculate the colour number for the rectangle.
            colour_number = (i + j - 2) % 3

            # Calculate the area of this rectangle.
            area = w * h

            # Update the total area of each colour.
            if colour_number == 0:
                white_area += area
            elif colour_number == 1:
                yellow_area += area
            else:
                red_area += area

    return white_area, yellow_area, red_area

# Test

#print(calculate_areas((1,1,1),(1,1,1)))  # Expected output: (12, 8, 6)

#order: white, yellow, red
#formula: (i + j âˆ’ 2) % 3
def calculate_areas(w_list:list, h_list:list) -> tuple:

    white = 0
    yellow = 0
    red = 0

    if w_list is None:
        if h_list is None:
            return 0
    
    for widths in w_list:
        for heights in h_list:
            areas = widths * heights
            colour = (widths + heights - 2) % 3

            if colour == 0:
                white += 1
            elif colour == 1:
                yellow += 1
            else:
                red += 1

    return (white,yellow,red)

w_list = [1, 1, 1]
h_list = [1, 1, 1]
print(calculate_areas(w_list,h_list))

    
